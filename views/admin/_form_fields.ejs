<div id="form-fields">
  <div id="title">
    <label class="label" for="title">Title</label>
    <input type="text" name="title" value="<%= project.title %>" required>
  </div>
  <div id="naslov">
    <label class="label" for="naslov">Naslov</label>
    <input type="text" name="naslov" value="<%= project.naslov %>" required>
  </div>
  <div id="location">
    <label class="label" for="location">Location</label>
    <input type="text" name="location" value="<%= project.location %>" required>
  </div>
  <div id="lokacija">
    <label class="label" for="lokacija">Lokacija</label>
    <input type="text" name="lokacija" value="<%= project.lokacija %>" required>
  </div>
  <div id="description">
    <label class="label" for="description">Description</label>
    <textarea type="text" name="description" required><%= project.description %></textarea>
  </div>
  <div id="opis">
    <label class="label" for="opis">Opis</label>
    <textarea type="text" name="opis" required><%= project.opis %></textarea>
  </div>

  <div id="existing-categories">
    <label class="label" for="existing-categories">All categories</label>
    <div class="cat-container">
      <% let catArr = []; %>
      <% allProjects.forEach(element => { %>
        <% element.categories.forEach(cat => { %>
          <% if (!catArr.includes(cat)) { %>
            <% catArr.push(cat); %>
            <span class="cat-tab"><%= cat %></span>
          <% } %>
        <% }) %>
      <% }) %>      
    </div>
  </div>
  <div id="postojece-kategorije">
    <label class="label" for="postojece-kategorije">Sve kategorije</label>
    <div class="cat-container">
      <% let katArr = []; %>
      <% allProjects.forEach(element => { %>
        <% element.kategorije.forEach(kat => { %>
          <% if (!katArr.includes(kat)) { %>
            <% katArr.push(kat); %>
            <span class="cat-tab"><%= kat %></span>
          <% } %>
        <% }) %>
      <% }) %>
    </div>
  </div>

  <div id="categories">
    <label class="label" for="categories">Categories</label>
    <textarea type="text" name="categories"><%= project.categories %></textarea>
  </div>
  <div id="kategorije">
    <label class="label" for="kategorije">Kategorije</label>
    <textarea type="text" name="kategorije"><%= project.kategorije %></textarea>
  </div>
  <div id="area">
    <label class="label" for="areas">Area</label>
    <div><input type="number" name="area" value="<%= project.area %>" required>m<sup>2</sup></div>
  </div>
  <div id="date">
    <label class="label" for="projDate">Project Date</label>
    <input type="date" name="projDate" value="<%= project.projDate == null ? '' : 
               project.projDate.toISOString().split('T')[0] %>" required>
  </div>
  <div id="upload-container">
    <label id="upload-btn" class="btn btn-upload" for="projImages">Upload Images</label>
    <input id="image-input" class="btn" type="file" multiple name="projImages" onchange="previewImage(event)"
      hidden="true">
  </div>
</div>
